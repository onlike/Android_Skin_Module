<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:skin="http://schemas.android.com/android/skin"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/skin_white"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_item_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4564456456"
        android:textColor="@color/skin_title"
        android:textSize="20dp"
        skin:enable="true"/>

    <TextView
        android:id="@+id/tv_item_main_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4564456456"
        android:textColor="@color/skin_sub_title"
        android:textSize="20dp"
        skin:enable="true"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.7"
        android:background="@color/skin_main"
        skin:enable="true"/>

</LinearLayout>